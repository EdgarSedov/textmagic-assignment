{% extends 'base.html.twig' %}

{% block title %}Attempt #{{ attempt.id }}{% endblock %}

{% block stylesheets %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">{{ attempt.questionnaire.title }} results, attempt #{{ attempt.id }}</h1>

        <div class="row">
            <div class="col-md-6">
                <h3>Correct Answers</h3>
                <ul class="list-group mb-4">
                    {% for userAnswer in attempt.userAnswers %}
                        {% if userAnswer.isCorrect == true %}
                            <li class="list-group-item list-group-item-success text-center">{{ userAnswer.question.title }}</li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>

            <div class="col-md-6">
                <h3>Incorrect Answers</h3>
                <ul class="list-group">
                    {% for userAnswer in attempt.userAnswers %}
                        {% if userAnswer.isCorrect == false %}
                            <li class="list-group-item list-group-item-danger text-center">{{ userAnswer.question.title }}</li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="text-center mt-5">
            <a href="{{ path('questionnaires') }}" class="btn btn-primary">Take Another Test</a>
        </div>
    </div>
{% endblock %}
