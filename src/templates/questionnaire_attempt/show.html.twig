{% extends 'base.html.twig' %}

{% block title %}Attempt #{{ attempt.id }}{% endblock %}

{% block stylesheets %}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-md-center">
            <div class="col-md-8">
                <div class="card shadow-sm mb-5">
                    <div class="card-body">
                        <h2 class="card-title text-center">{{ attempt.questionnaire.title }}, attempt #{{ attempt.id }}</h2>
                        <form id="testForm" action="" method="POST">
                            {% for userAnswer in attempt.userAnswers %}
                                <div class="card mb-3">
                                    <div class="card-header">
                                        <strong>{{ userAnswer.question.title }}</strong>
                                    </div>
                                    {% if userAnswer.answeredAt %}
                                    <div class="text-center">Answered</div>
                                    {% else %}
                                    <ul class="list-group list-group-flush">
                                        {% for answerOption in userAnswer.question.answerOptions %}
                                            <li class="list-group-item">
                                                <div class="form-check">
                                                    <input
                                                        class="form-check-input"
                                                        type="checkbox"
                                                        name="answers[{{ userAnswer.id }}][]"
                                                        value="{{ answerOption.id }}"
                                                        id="q{{ loop.parent.loop.index }}option{{ loop.index }}"
                                                    >
                                                    <label class="form-check-label" for="q{{ loop.parent.loop.index }}option{{ loop.index }}">
                                                        {{ answerOption.text }}
                                                    </label>
                                                </div>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                    {% endif %}
                                </div>
                            {% endfor %}
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Submit Answers</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
